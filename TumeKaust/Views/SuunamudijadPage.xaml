<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:TumeKaust.Models"
             xmlns:viewmodels="clr-namespace:TumeKaust.ViewModels"
             x:Class="TumeKaust.Views.SuunamudijadPage"
             Title="Suunamudijad"
             BackgroundColor="#181818">

    <ContentPage.BindingContext>
        <viewmodels:SuunamudijadViewModel />
    </ContentPage.BindingContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Header: Isikud -->
        <Frame Grid.Row="0" 
               BackgroundColor="#181818" 
               Padding="20,15" 
               Margin="0,0,0,10"
               HasShadow="False">
            <Label Text="Isikud" 
                   FontSize="24" 
                   FontAttributes="Bold" 
                   TextColor="#ffd710" 
                   HorizontalOptions="Center"/>
        </Frame>

        <!-- Category Title: Kategoorianimi -->
        <Frame Grid.Row="1" 
               BackgroundColor="#181818" 
               Padding="20,10" 
               Margin="0,0,0,10"
               HasShadow="False">
            <Label Text="Suunamudijad" 
                   FontSize="20" 
                   FontAttributes="Bold" 
                   TextColor="#ffd710" 
                   HorizontalOptions="Center"/>
        </Frame>

        <!-- Content List -->
        <Grid Grid.Row="2" ColumnDefinitions="*, Auto, *">
            <CollectionView Grid.Column="1"
                    ItemsSource="{Binding Persons}"
                    SelectionMode="Single"
                    WidthRequest="420"
                    HorizontalOptions="Center"
                    VerticalOptions="Start">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:Person">
                        <Frame Margin="0,5" 
                   Padding="15" 
                   BackgroundColor="#181818" 
                   CornerRadius="10"
                   HasShadow="True">
                            <Grid ColumnDefinitions="100,*" 
                      VerticalOptions="Center">

                                <!-- Image -->
                                <Image Source="{Binding ImagePath}"
                           Aspect="AspectFill"
                           WidthRequest="80"
                           HeightRequest="80"
                           Grid.Column="0"
                           Margin="0,0,15,0" />

                                <!-- Text Description -->
                                <VerticalStackLayout Grid.Column="1"
                                         VerticalOptions="Center">
                                    <Label Text="{Binding Name}"
                               FontSize="18"
                               FontAttributes="Bold"
                               TextColor="#ffd710" />
                                    <Label Text="{Binding Description}"
                               FontSize="14"
                               TextColor="#ffd710"
                               LineBreakMode="WordWrap" />

                                    <!-- Nupp mis viib isiku Details lehele -->
                                    <Button Text="Loe lÃ¤hemalt"
                                BackgroundColor="#6a329f"
                                TextColor="#ffd710"
                                FontSize="16"
                                FontAttributes="Bold"
                                CornerRadius="8"
                                HeightRequest="35"
                                WidthRequest="150"
                                HorizontalOptions="Start"
                                CommandParameter="{Binding .}"
                                Clicked="OnDetailsClicked" />

                                </VerticalStackLayout>
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </Grid>

        <Grid Grid.Row="3" 
              ColumnDefinitions="*,Auto"
              Padding="20,0"
              Margin="0,10,0,10">

            <!-- Privacy -->
            <Label Grid.Column="0"
                   Text="Privacy"
                   FontSize="12"
                   TextColor="Gray"
                   VerticalOptions="Center"
                   HorizontalOptions="Start" />

            <!-- Back Button -->
            <Button Grid.Column="1"
                    Text="TAGASI"
                    BackgroundColor="#6a329f"
                    TextColor="#ffd710"
                    Style="{StaticResource ButtonStyle}"
                    VerticalOptions="Center"
                    HorizontalOptions="End"
                    WidthRequest="80"
                    HeightRequest="35"
                    CornerRadius="8"
                    FontSize="16"
                    FontAttributes="Bold"
                    Clicked="OnBackClicked" />
        </Grid>
    </Grid>
</ContentPage>
