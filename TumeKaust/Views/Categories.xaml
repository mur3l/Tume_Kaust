<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TumeKaust.Views.Categories"
             Title="Kategooriad"
             BackgroundColor="{StaticResource Background}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        
        <!-- Content Area -->
        <VerticalStackLayout Grid.Row="0" Padding="20" Spacing="20">
            <Image
                Source="meri1.png"
                HeightRequest="185"
                Aspect="AspectFit" />
            <Label 
                Text="Patused kategooriad"
                FontSize="24"
                TextColor="{StaticResource Text}"
                FontAttributes="Bold"
                HorizontalOptions="Center" />
                
            <Button 
                Text="Poliitikud"
                BackgroundColor="#6a329f"
                TextColor="#ffd710"
                FontSize="16"
                FontAttributes="Bold"
                CornerRadius="8"
                HeightRequest="30"
                WidthRequest="200"
                Clicked="OnPoliitikudClicked" />
                
            <Button 
                Text="Sportlased"
                BackgroundColor="#6a329f"
                TextColor="#ffd710"
                FontSize="16"
                FontAttributes="Bold"
                CornerRadius="8"
                HeightRequest="30"
                WidthRequest="200"
                Clicked="OnSportlasedClicked" />
                
            <Button 
                Text="Suunamudijad"
                BackgroundColor="#6a329f"
                TextColor="#ffd710"
                FontSize="16"
                FontAttributes="Bold"
                CornerRadius="8"
                HeightRequest="30"
                WidthRequest="200"
                Clicked="OnSuunamudijadClicked" />
                
            <Button 
                Text="Presidendid"
                BackgroundColor="#6a329f"
                TextColor="#ffd710"
                FontSize="16"
                FontAttributes="Bold"
                CornerRadius="8"
                HeightRequest="30"
                WidthRequest="200"
                Clicked="OnPresidendidClicked" />
        </VerticalStackLayout>
        
        <!-- Back Button at Bottom -->
        <Button Grid.Row="3"
                Text="TAGASI"
                BackgroundColor="#6a329f"
                TextColor="#ffd710"
                VerticalOptions="Center"
                WidthRequest="80"
                HeightRequest="35"
                CornerRadius="8"
                FontSize="16"
                FontAttributes="Bold"
                Clicked="OnBackClicked" />
    </Grid>
</ContentPage>