<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TumeKaust.Views.PersonalDetails"
             Title="PersonalDetails"
             BackgroundColor="{StaticResource Background}">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <!-- Logo ja nimi -->
            <HorizontalStackLayout Spacing="10" VerticalOptions="Start" HorizontalOptions="Start">
                <Image Source="meri1.png"
                       HeightRequest="50"
                       WidthRequest="50">
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnLogoTapped"/>
                    </Image.GestureRecognizers>
                </Image>
                <Label Text="{Binding Name}" 
                       FontSize="20"
                       VerticalOptions="Center"
                       TextColor="{StaticResource Text}" />
            </HorizontalStackLayout>

            <!-- Pilt üleval -->
            <Image Source="{Binding HeroImage}" 
                   Aspect="AspectFill" 
                   HeightRequest="200" 
                   HorizontalOptions="Center"/>

            <!-- Lühitutvustus -->
            <VerticalStackLayout Spacing="15"
                                 HorizontalOptions="Center"
                                 VerticalOptions="Center"
                                 WidthRequest="340">
                <Label Text="Lühidalt, kes on?"
                       FontSize="18"
                       FontAttributes="Bold"
                       TextColor="#ffd710"
                       HorizontalOptions="Center"
                       HorizontalTextAlignment="Center"/>

                <Label Text="{Binding Description}"
                       FontSize="15"
                       LineHeight="1.4"
                       TextColor="#ffd710"
                       HorizontalOptions="Center"
                       HorizontalTextAlignment="Center"
                       LineBreakMode="WordWrap"/>
            </VerticalStackLayout>

            <!-- Uudised -->
            <Label Text="Uudised"
                   FontSize="18"
                   FontAttributes="Bold"
                   TextColor="#ffd710"
                   HorizontalTextAlignment="Center"
                   Margin="0,10,0,0"/>

            <CollectionView x:Name="NewsCollectionView"
                            ItemsSource="{Binding News}"
                            ItemsLayout="VerticalList"
                            SelectionMode="None">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <VerticalStackLayout Padding="0,10">

                            <!-- Uudise tekst -->
                            <Label Text="{Binding .}"
                                   FontSize="14.5"
                                   TextColor="{StaticResource Text}"
                                   HorizontalTextAlignment="Center"
                                   LineBreakMode="WordWrap"
                                   Margin="15,0"/>

                            <!-- Loe edasi nupp (keskel) -->
                           <Button Text="Loe edasi"
                                   Style="{StaticResource ButtonStyle}"
                                   BackgroundColor="#6a329f"
                                   TextColor="#ffd710"
                                   BorderWidth="2"
                                   FontSize="14"
                                   FontAttributes="Bold"
                                   CornerRadius="8"
                                   HorizontalOptions="Center"
                                   WidthRequest="130"
                                   HeightRequest="35"
                                   CommandParameter="{Binding .}"
                                   Clicked="OnNewsTapped">
                                <VisualStateManager.VisualStateGroups>
                                    <VisualStateGroup x:Name="CommonStates">
                                        <VisualState x:Name="Normal">
                                            <VisualState.Setters>
                                                <Setter Property="BackgroundColor" Value="#6a329f"/>
                                                <Setter Property="TextColor" Value="#ffd710"/>
                                            </VisualState.Setters>
                                        </VisualState>
                                        <VisualState x:Name="PointerOver">
                                            <VisualState.Setters>
                                                <Setter Property="BackgroundColor" Value="#8c4bdc"/>
                                                <Setter Property="TextColor" Value="White"/>
                                            </VisualState.Setters>
                                        </VisualState>
                                        <VisualState x:Name="Pressed">
                                            <VisualState.Setters>
                                                <Setter Property="BackgroundColor" Value="#57267d"/>
                                                <Setter Property="TextColor" Value="White"/>
                                            </VisualState.Setters>
                                        </VisualState>
                                    </VisualStateGroup>
                                </VisualStateManager.VisualStateGroups>
                            </Button>

                            <!-- Peenike joon uudiste vahel -->
                            <BoxView HeightRequest="1" 
                                     Color="{StaticResource Border}" 
                                     Margin="0,10,0,10"/>
                        </VerticalStackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <!-- Nupp ja Privacy -->
            <Grid ColumnDefinitions="*,*" Margin="0,20,0,0" HeightRequest="40">
                <!-- Privacy -->
                <Label Grid.Column="0"
                       Text="Privacy"
                       FontSize="12"
                       TextColor="Gray"
                       HorizontalOptions="Start"
                       VerticalOptions="Center"/>

                <!-- Nupp -->
                <Button Grid.Column="1"
                        Text="TAGASI"
                        Style="{StaticResource ButtonStyle}"
                        HorizontalOptions="End"
                        VerticalOptions="Center"
                        WidthRequest="100"
                        HeightRequest="35"
                        CornerRadius="8"
                        FontSize="16"
                        FontAttributes="Bold"
                        Clicked="OnBackButtonClicked"/>
            </Grid>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>