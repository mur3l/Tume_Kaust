<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TumeKaust.Views.PersonalDetails"
             Title="PersonalDetails"
             BackgroundColor="{StaticResource Background}">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <!-- Logo ja nimi -->
            <HorizontalStackLayout Spacing="10" VerticalOptions="Start" HorizontalOptions="Start">
                <Image Source="meri1.png"
                       HeightRequest="50"
                       WidthRequest="50">
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnLogoTapped"/>
                    </Image.GestureRecognizers>
                </Image>
                <Label Text="{Binding Name}" 
                       FontSize="20"
                       VerticalOptions="Center"
                       TextColor="{StaticResource Text}" />
            </HorizontalStackLayout>

            <!-- Pilt üleval -->
            <Image Source="{Binding HeroImage}" 
                   Aspect="AspectFill" 
                   HeightRequest="200" 
                   HorizontalOptions="Center"/>

            <!-- Lühitutvustus -->
            <VerticalStackLayout Spacing="10">
                <Label Text="Lühidalt, kes on?"
                       FontSize="18"
                       FontAttributes="Bold"
                       TextColor="{StaticResource Text}"
                       HorizontalOptions="Start"/>
                <Label Text="{Binding Description}"
                       FontSize="14"
                       TextColor="{StaticResource Text}"
                       LineBreakMode="WordWrap"/>
            </VerticalStackLayout>

            <!-- Uudised -->
            <Label Text="Uudised"
                   FontSize="16"
                   FontAttributes="Bold"
                   TextColor="{StaticResource Text}"
                   Margin="0,10,0,0"
                   HorizontalTextAlignment="Center"/>

            <CollectionView ItemsSource="{Binding News}"
                ItemsLayout="VerticalList"
                SelectionMode="Single"
                HeightRequest="200"
                HorizontalOptions="Center">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame WidthRequest="120"
                               HeightRequest="80"
                               CornerRadius="10"
                               BorderColor="{StaticResource Border}"
                               Padding="10"
                               BackgroundColor="{StaticResource Background}"
                               HorizontalOptions="Center">
                            <Label Text="{Binding .}"  
                                   VerticalOptions="Center"
                                   HorizontalOptions="Center"
                                   FontSize="12"
                                   TextColor="{StaticResource Text}"
                                   LineBreakMode="TailTruncation"
                                   MaxLines="2"
                                   HorizontalTextAlignment="Center"/>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <!-- Nupp ja Privacy sama ritta -->
            <Grid ColumnDefinitions="*,*" Margin="0,20,0,0" HeightRequest="40">
                <!-- Privacy -->
                <Label Grid.Column="0"
                       Text="Privacy"
                       FontSize="12"
                       TextColor="Gray"
                       HorizontalOptions="Start"
                       VerticalOptions="Center"/>

                <!-- Nupp -->
                <Button Grid.Column="1"
                        Text="Back"
                        Style="{StaticResource ButtonStyle}"
                        HorizontalOptions="End"
                        VerticalOptions="Center"
                        WidthRequest="80"
                        HeightRequest="35"
                        CornerRadius="8"
                        FontSize="14"
                        Clicked="OnBackButtonClicked"/>
            </Grid>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>