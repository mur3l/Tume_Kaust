<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">


    <Style TargetType="Button" x:Key="ButtonStyle">
        <Setter Property="FontSize" Value="22" />
        <Setter Property="TextColor" Value="#ffd710" />
        <Setter Property="BackgroundColor" Value="#6a329f" />
        <Setter Property="BorderColor" Value="#ffd710" />
        <Setter Property="FontFamily" Value="Medium" />
    </Style>

    <Style TargetType="Label" x:Key="IntroPageHeaderStyle" >
        <Setter Property="FontSize" Value="32"/>
        <Setter Property="TextColor" Value="#ffd710"/>
    </Style>

    <Style TargetType="Label" x:Key="NewsLinkStyle">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="TextColor" Value="Gray"/>
        <Setter Property="HorizontalOptions" Value="Start"/>
    </Style>

</ResourceDictionary>

    