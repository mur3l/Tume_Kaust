<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:TumeKaust.Models"
             x:Class="TumeKaust.MainPage">

    <ScrollView>
        <Grid Padding="20" RowSpacing="20">

            <!-- Defineerime 4 põhijada -->
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <!-- Ülemine osa: pilt + otsing -->
                <RowDefinition Height="Auto" />
                <!-- Keskmine 2x3 Grid -->
                <RowDefinition Height="Auto"/>
                <!--Alumine pealkiri-->
                <RowDefinition Height="Auto" />
                <!-- Alumine 3 Grid -->
            </Grid.RowDefinitions>

            <!-- 1️⃣ Ülemine osa: pilt + otsing -->
            <VerticalStackLayout Grid.Row="0" Spacing="10">
                <Image Source="meri1.png" Aspect="AspectFill" HeightRequest="200"
                       x:Name="logoimage" Opacity="0"/>
                <Label Text="Tere Tulemast Tumedasse Kausta!" HorizontalOptions="Center" FontSize="40"/>
                <Label Text="Kaust, kus ise olla ei tahaks" HorizontalOptions="Center" FontSize="20"/>
                <SearchBar Placeholder="Otsi midagi..." />
            </VerticalStackLayout>

            <!-- 2️⃣ Keskmine Grid 2x3 -->
            <Grid Grid.Row="1" ColumnSpacing="10" RowSpacing="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="100" />
                    <RowDefinition Height="100" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- Näidis elemendid -->
                <ContentPage>
                    <CollectionView x:Name="CategoryCollection"
                        SelectionMode="Single"
                        SelectionChanged="OnCategorySelected">

                        <CollectionView.ItemsLayout>
                            <!-- 2 veergu ja automaatsed read -->
                            <GridItemsLayout Orientation="Vertical"
                                 Span="2"
                                 VerticalItemSpacing="10"
                                 HorizontalItemSpacing="10"/>
                        </CollectionView.ItemsLayout>

                        <CollectionView.ItemTemplate>
                            <DataTemplate x:DataType="models:MainPageCategoryGrid">
                                <Frame CornerRadius="15"
                           HasShadow="True"
                           Padding="10"
                           BackgroundColor="#222"
                           Margin="5">
                                    <VerticalStackLayout HorizontalOptions="Center">
                                        <Image Source="{Binding Image}"
                                   WidthRequest="100"
                                   HeightRequest="100"
                                   Aspect="AspectFit"/>
                                        <Label Text="{Binding Name}"
                                   TextColor="White"
                                   FontSize="16"
                                   HorizontalOptions="Center"/>
                                    </VerticalStackLayout>
                                </Frame>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </ContentPage>
            </Grid>

            <Grid Grid.Row="2" ColumnSpacing="10" RowSpacing="10" HeightRequest="50">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Label Text="Värskeimad Patustajad" 
                       HorizontalOptions="Center"
                       VerticalOptions="Center"
                       FontSize="20"/>
            </Grid>


            <!-- 3️⃣ Alumine Grid 1x3 -->
            <Grid Grid.Row="3" ColumnSpacing="10" RowSpacing="10" HeightRequest="100">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                
                <!-- Näidis elemendid -->
                <BoxView Color="Gray" Grid.Column="0"/>
                <BoxView Color="LightBlue" Grid.Column="1"/>
                <BoxView Color="LightGreen" Grid.Column="2"/>


            </Grid>

        </Grid>
    </ScrollView>
</ContentPage>



