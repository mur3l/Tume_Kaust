<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:TumeKaust.Models"
             xmlns:viewmodels="clr-namespace:TumeKaust.ViewModels"
             x:Class="TumeKaust.MainPage">

    <!-- ViewModel binding -->
    <ContentPage.BindingContext>
        <viewmodels:MainPageViewModel />
    </ContentPage.BindingContext>

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <!-- 1️. Ülemine pilt + otsing -->
            <VerticalStackLayout Spacing="10">
                <Image Source="meri1.png"
                       Aspect="AspectFill"
                       HeightRequest="200"
                       x:Name="logoimage"
                       Opacity="0"/>
                <Label Text="Tere Tulemast Tumedasse Kausta!"
                       HorizontalOptions="Center"
                       FontSize="40"
                       TextColor="White"/>
                <Label Text="Kaust, kus ise olla ei tahaks"
                       HorizontalOptions="Center"
                       FontSize="20"
                       TextColor="#ccc"/>
                <SearchBar Placeholder="Otsi midagi..." />
            </VerticalStackLayout>

            <!-- Keskmine 2x2 kategooriate grid -->
            <Grid ColumnSpacing="10" RowSpacing="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="150"/>
                    <RowDefinition Height="150"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Poliitikud -->
                <Frame Grid.Row="0" Grid.Column="0"
           CornerRadius="15"
           BackgroundColor="#222"
           HasShadow="True"
           Padding="10">
                    <VerticalStackLayout HorizontalOptions="Center">
                        <Image Source="poliitikud.png"
                   WidthRequest="100"
                   HeightRequest="100"
                   Aspect="AspectFit"/>
                        <Label Text="Poliitikud"
                   TextColor="White"
                   FontSize="16"
                   HorizontalOptions="Center"/>
                    </VerticalStackLayout>
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnPoliitikudTapped"/>
                    </Frame.GestureRecognizers>
                </Frame>

                <!-- Sportlased -->
                <Frame Grid.Row="0" Grid.Column="1"
           CornerRadius="15"
           BackgroundColor="#222"
           HasShadow="True"
           Padding="10">
                    <VerticalStackLayout HorizontalOptions="Center">
                        <Image Source="sportlased.png"
                   WidthRequest="100"
                   HeightRequest="100"
                   Aspect="AspectFit"/>
                        <Label Text="Sportlased"
                   TextColor="White"
                   FontSize="16"
                   HorizontalOptions="Center"/>
                    </VerticalStackLayout>
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnSportlasedTapped"/>
                    </Frame.GestureRecognizers>
                </Frame>

                <!-- Presidendid -->
                <Frame Grid.Row="1" Grid.Column="0"
           CornerRadius="15"
           BackgroundColor="#222"
           HasShadow="True"
           Padding="10">
                    <VerticalStackLayout HorizontalOptions="Center">
                        <Image Source="presidendid.png"
                   WidthRequest="100"
                   HeightRequest="100"
                   Aspect="AspectFit"/>
                        <Label Text="Presidendid"
                   TextColor="White"
                   FontSize="16"
                   HorizontalOptions="Center"/>
                    </VerticalStackLayout>
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnPresidendidTapped"/>
                    </Frame.GestureRecognizers>
                </Frame>

                <!-- Suunamudijad -->
                <Frame Grid.Row="1" Grid.Column="1"
           CornerRadius="15"
           BackgroundColor="#222"
           HasShadow="True"
           Padding="10">
                    <VerticalStackLayout HorizontalOptions="Center">
                        <Image Source="suunamudijad.png"
                   WidthRequest="100"
                   HeightRequest="100"
                   Aspect="AspectFit"/>
                        <Label Text="Suunamudijad"
                   TextColor="White"
                   FontSize="16"
                   HorizontalOptions="Center"/>
                    </VerticalStackLayout>
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnSuunamudijadTapped"/>
                    </Frame.GestureRecognizers>
                </Frame>

            </Grid>

            <!-- 3️. Pealkiri alumise gridi kohal -->
            <Label Text="Värskeimad Patustajad"
                   HorizontalOptions="Center"
                   FontSize="20"
                   TextColor="White"/>

            <!-- 4️. Alumine 1x3 hiljuti uuendatud isikute grid horisontaalselt -->
            <CollectionView ItemsSource="{Binding RecentPeople}"
                            SelectionMode="Single"
                            SelectionChanged="OnRecentSelected"
                            HeightRequest="150"
                            HorizontalScrollBarVisibility="Never">

                <CollectionView.ItemsLayout>
                    <LinearItemsLayout Orientation="Horizontal"
                                       ItemSpacing="10"/>
                </CollectionView.ItemsLayout>

                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:PersonalDetailsGrid">
                        <Frame CornerRadius="15"
                               HasShadow="True"
                               Padding="10"
                               BackgroundColor="#333"
                               WidthRequest="120"
                               HeightRequest="150"
                               Margin="5">
                            <VerticalStackLayout HorizontalOptions="Center">
                                <Image Source="{Binding Image}"
                                       WidthRequest="80"
                                       HeightRequest="80"
                                       Aspect="AspectFill"
                                       Margin="0,0,0,5"/>
                                <Label Text="{Binding Name}"
                                       TextColor="White"
                                       FontSize="16"
                                       HorizontalOptions="Center"/>
                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
